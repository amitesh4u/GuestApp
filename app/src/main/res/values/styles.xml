<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appRed</item>
        <item name="colorPrimaryDark">@color/appDarkRed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderTheme">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/appRed</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SubHeaderTheme">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/appRed</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LabelTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appSlate</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FooterTheme">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/appRed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTheme">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/appSlate</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingTop">@dimen/size_8dp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
        <item name="android:paddingBottom">@dimen/size_8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/appGreen</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">@dimen/size_8dp</item>
        <item name="android:layout_marginEnd">@dimen/size_8dp</item>
        <item name="android:layout_marginTop">@dimen/size_8dp</item>
        <item name="android:layout_marginBottom">@dimen/size_8dp</item>
    </style>

    <style name="SmallButtonTheme">
        <item name="android:textSize">@dimen/small_button_text_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/appGreen</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">@dimen/size_8dp</item>
        <item name="android:layout_marginEnd">@dimen/size_8dp</item>
    </style>

    <style name="MyProgressBarRectangle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/android_progressbar_oval</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">150dp</item>
    </style>
</resources>
